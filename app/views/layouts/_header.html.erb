<header>
  <a href="/" ><img class="title-icon" src="/assets/Document-icon.png"/></a>
  <div class="title">
    <h1><%=t heading %></h1>
    <div class='hello-user'>
        <%=t :hello %>
        <span class="hello-user-actions <% if user_signed_in? %>active<% end %>">
            <span class='user-name'><%= current_user && current_user.name %></span> |
            <span class='sign-out'><%=t :sign_out %></span>
        </span>
        <span class="hello-user-actions-guest <% unless user_signed_in? %>active<% end %>">
            <span class='user-name-guest'><%=t :guest %></span> |
            <span class='sign-in'><%=t :sign_in %></span>
        </span>
        <span class="connecting"><%=t :connecting %></span>
        <span class="disconnecting"><%=t :disconnecting %></span>
    </div>
  </div>
  <div class="anti-title">
    <h1><%=t heading %></h1>
  </div>
  <% unless @subheading.nil? %>
    <h2 class='subtitle'><%=t @subheading %></h2>
  <% end %>
  <div class="actions">
    <div class="fb-like" data-href="http://www.developforpeople.com" data-send="true" data-width="450" data-show-faces="true" data-font="arial"></div>
  </div>
</header>
