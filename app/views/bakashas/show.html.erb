<% if notice %>
    <p class="notice"><%=t :received_bakasha %></p>
<% end %>

<div class="show-actions">
    <%= link_to t(:back), bakashas_path %>
</div>
<div class='bakasha'>
    <h3><%= t :bakasha %></h3>
    <div class='bakasha-details'>
      <div class='detail bakasha-date'>
        <label><%=t :nitkabel %>:</label>
        <%= @bakasha.recv_date %>
      </div>
      <div class='detail bakasha-meeting-reason'>
        <label><%=t :sibat %>:</label>
        <%= @bakasha.meeting_reason %>
      </div>
    </div>
    <div class='pniyot'>
      <% @bakasha.pniyas.each do |pniya| %>
          <div class='pniya' id='pniya-<%= pniya.mispar %>'>
            <h4><%=t :pniya %></h4>

            <div class='detail mispar-pniya'>
              <label><%=t :mispar_pniya %>:</label>
              <%= pniya.mispar %>
            </div>

            <table cellspacing=0 class='pniya-table' width="100%" id="pniya-table-<%= pniya.mispar %>">
              <thead>
              <tr>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th colspan=4><%=t :changes_amounts %>
              </tr>
              <tr>
                <th><%=t :mispar_prat %></th>
                <th><%=t :name_prat %></th>
                <th>&nbsp;</th>
                <th><%=t :hotsaa %></th>
                <th><%=t :hotsaa_mut %></th>
                <th><%=t :harshaa %></th>
                <th><%=t :ska %></th>
                <th><%=t :hotsaa %></th>
                <th><%=t :hotsaa_mut %></th>
                <th><%=t :harshaa %></th>
                <th><%=t :ska_abbr %></th>
              </tr>
              </thead>
              <tbody>
              <% pniya.haavaras.each do |haavara| %>
                  <tr class="pniya-row">
                    <td><div><%= haavara.prat %></div></td>
                    <td class="prat-name"><%= haavara.prat_name %></td>
                    <td><span>מ-</span><br><span>ל-</span></td>
                    <td><%= haavara.hotsaa_from %><br><%= haavara.hotsaa_to %></td>
                    <td><%= haavara.hotsaa_mut_from %><br><%= haavara.hotsaa_mut_to %></td>
                    <td><%= haavara.harshaa_from %><br><%= haavara.harshaa_to %></td>
                    <td><%= haavara.ska_from %><br><%= haavara.ska_to %></td>
                    <td><%= haavara.diff_hotsaa %></td>
                    <td><%= haavara.diff_hotsaa_mut %></td>
                    <td><%= haavara.diff_harshaa %></td>
                    <td><%= haavara.diff_ska %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
      <% end %>
    </div>
</div>
